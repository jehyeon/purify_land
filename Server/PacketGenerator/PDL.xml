<?xml version="1.0" encoding="utf-8" ?>
<PDL>
  <!-- 세션 접속 및 닉네임 등록 -->
  <packet name="S_ReceiveEnter">
  </packet>
  <packet name="C_EnterGame">
    <string name="nickname" />
  </packet>
  <packet name="S_BroadcastEnterGame">
    <int name="playerId" />
    <string name="nickname" />
    <float name="posX" />
    <float name="posY" />
    <int name="hp" />
    <int name="maxHp" />
  </packet>
  
  <!-- 접속한 유저 정보 -->
  <packet name="S_PlayerList">
    <list name="player">
      <bool name="isHost" />
      <bool name="isSelf" />
      <int name="playerId" />
      <string name="nickname" />
      <float name="posX" />
      <float name="posY" />
      <int name="hp" />
      <int name="maxHp" />
    </list>
  </packet>
  
  <!-- -->


  <packet name="C_LeaveGame">
  </packet>
  <packet name="S_BroadcastLeaveGame">
    <int name="playerId" />
  </packet>

  <packet name="C_Move">
		<float name="posX" />
		<float name="posY" />
	</packet>
	<packet name="S_BroadcastMove">
		<int name="playerId" />
		<float name="posX" />
		<float name="posY" />
	</packet>
	<packet name="C_Act">
		<int name="actionType" />
		<bool name="right" />
	</packet>
	<packet name="S_BroadcastAct">
		<int name="playerId" />
		<int name="actionType" />
		<bool name="right" />
	</packet>
	<packet name="C_PlayerHp">
		<int name="playerId" />
		<int name="hp" />
		<int name="maxHp" />
	</packet>
	<packet name="S_BroadcastPlayerHp">
		<int name="playerId" />
		<int name="hp" />
		<int name="maxHp" />
	</packet>

	<packet name="S_EnemyList">
		<list name="enemy">
			<int name="enemyId" />
			<int name="id" />
			<float name="posX" />
			<float name="posY" />
			<int name="hp" />
			<int name="maxHp" />
		</list>
	</packet>
	<packet name="C_SpawnCallEnemy">
		<int name="enemyId" />
		<float name="posX" />
		<float name="posY" />
	</packet>
	<packet name="S_BroadcastSpawnEnemy">
		<int name="enemyId" />
		<int name="id" />
		<float name="posX" />
		<float name="posY" />
		<int name="hp" />
		<int name="maxHp" />
	</packet>
	<packet name="C_EnemyMove">
		<int name="id" />
		<float name="posX" />
		<float name="posY" />
	</packet>
	<packet name="S_BroadcastEnemyMove">
		<int name="id" />
		<float name="posX" />
		<float name="posY" />
	</packet>
	<packet name="C_EnemyTarget">
		<int name="id" />
		<int name="playerId" />
	</packet>
	<packet name="S_BroadcastEnemyTarget">
		<int name="id" />
		<int name="playerId" />
	</packet>
	<packet name="C_EnemyState">
		<int name="id" />
		<int name="state" />
	</packet>
	<packet name="S_BroadcastEnemyState">
		<int name="id" />
		<int name="state" />
	</packet>
	<packet name="C_EnemyAct">
		<int name="id" />
		<int name="actionType" />
		<bool name="right" />
	</packet>
	<packet name="S_BroadcastEnemyAct">
		<int name="id" />
		<int name="actionType" />
		<bool name="right" />
	</packet>
	<packet name="C_EnemyHp">
		<int name="id" />
		<int name="hp" />
		<int name="maxHp" />
	</packet>
	<packet name="S_BroadcastEnemyHp">
		<int name="id" />
		<int name="hp" />
		<int name="maxHp" />
	</packet>
</PDL>